    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'clash-cli'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=clash-cli",
                    "--package=clash-cli"
                ],
                "filter": {
                    "name": "clash-cli",
                    "kind": "bin"
                }
            },
            "args": [
                // "put",
                "proxies",
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "cppvsdbg",
            "request": "launch",
            "preLaunchTask": "build",
            "name": "windows Debug executable 'clash-cli'",
            "program": "${workspaceRoot}/target/debug/clash-cli.exe",
            "args": [
                "get",
                "proxies/专线 香港 03",
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'clash-cli'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=clash-cli",
                    "--package=clash-cli"
                ],
                "filter": {
                    "name": "clash-cli",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}